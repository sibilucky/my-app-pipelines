 pipeline {
    agent any

    parameters {
        string(name: 'GIT_BRANCH', defaultValue: 'main', description: 'Git branch to build')
        string(name: 'https://github.com/sibilucky/my-app-pipelines.git', defaultValue: 'https://github.com/sibilucky/my-app-pipelines.git', description: 'Git repository URL')
        string(name: 'TAG_NUMBER', defaultValue: 'v1.0.0', description: 'Tag number to build and deploy')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Dynamically set the branch and tag using the parameters
                    def branchName = main // Use the branch parameter
                    def repoUrl =  https://github.com/sibilucky/my-app-pipelines.git // Use the repository URL parameter
                    def tagName = v1.0.0   // Use the tag number parameter
                    
                    echo "Checking out branch: ${branchName} from repository: ${repoUrl}, with tag: ${tagName}"
                    
                    // Checkout the repository using the dynamically set repository URL, branch, and tag
                    git(
                        branch: main,       // Checkout the specific branch
                        url:  https://github.com/sibilucky/my-app-pipelines.git            // Clone the repository from the URL
                    )
                    
                    // Optionally, check out a specific tag
                    if (tagName) {
                        echo "Checking out tag: ${tagName}"
                        sh "git checkout tags/${tagName} -b ${tagName}-branch"
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo "Building the project with Maven..."
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying to Docker..."
                    
                    // Build Docker image with the tag number
                    sh "docker build -t sibisam2301/maven:${params.TAG_NUMBER} ."

                    // Login to Docker Hub securely
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials-id', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh "echo ${DOCKER_PASSWORD} | docker login --username ${DOCKER_USERNAME} --password-stdin"
                    }

                    // Push the Docker image to Docker Hub with the specified tag number
                    sh "docker push sibisam2301/maven:${params.TAG_NUMBER}"

                    // Run the Docker container with the specified host port
                    sh "docker run -d -p ${params.HOST_PORT}:7079 sibisam2301/maven:${params.TAG_NUMBER}"
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline execution finished."
        }
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
